{
	"name": "apollo-server-integration-svelte",
	"version": "0.0.9",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@apollo/server": "^4.10.4",
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@apollo/server": "^4.10.4",
		"@apollo/server-integration-testsuite": "^4.10.4",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vitest": "^1.2.0"
	},
    "author": "Pablo Carrera <poscye@protonmail.com>",
    "license": "MIT",
    "description": "This package provides an integration for using Apollo Server with SvelteKit. It allows you to easily set up a GraphQL server within your SvelteKit application.",
    "keywords": [
        "npm",
        "package",
        "sveltekit",
        "apollo-server",
        "graphql",
        "typescript"
    ],
    "bugs": {
        "url": "https://github.com/pabl-o-ce/apollo-server-integration-svelte/issues"
    },
    "homepage": "https://github.com/pabl-o-ce/apollo-server-integration-svelte#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/pabl-o-ce/apollo-server-integration-svelte"
    },
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
